# EditorConfig is awesome: https://EditorConfig.org

root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# C# files
[*.{cs,csx}]
indent_size = 4

# JSON files  
[*.{json,jsonc}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Web config files
[*.{config,xml}]
indent_size = 2

# TypeScript and JavaScript
[*.{ts,js,tsx,jsx}]
indent_size = 2

# CSS and SCSS
[*.{css,scss,sass}]
indent_size = 2

# HTML
[*.{html,htm}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Make files
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4