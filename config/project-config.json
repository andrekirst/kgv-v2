      "options": ["Backlog", "Sprint 1", "Sprint 2", "Sprint 3", "Sprint 4", "Sprint 5", "Current Sprint", "Next Sprint"],
      "default": "Backlog",
      "required": false,
      "description": "Sprint assignment for issue"
